<form>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label>Category Name</label>
        {{#form}}
        <input
          type="text"
          class="form-control fc-custom"
          placeholder=""
          value="{{ title }}"
          onkeyup="_self.updateForm('title', event)"
          onchange="_self.updateForm('title', event)"
        />
        {{/form}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="update ml-auto mr-auto">
      <button
        type="submit"
        class="btn btn-primary btn-round"
        onClick="_self.onSubmit(event)"
      >
        Update Category
      </button>
    </div>
  </div>
</form>
