<div class="table-responsive">
  <table class="table">
    <thead class="text-primary">
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#categories}}
      <tr>
        <td>{{ id }}</td>
        <td>{{ title }}</td>
        <td>
          <a
            href="/dashboard/categories/{{ id }}/update"
            onclick="SimpleJsMvc.
            routeLink(event, '/dashboard/categories/{{ id }}/update')"
          >
            <i class="nc-icon nc-ruler-pencil"></i>
          </a>
        </td>
        <td><i class="nc-icon nc-scissors"></i></td>
      </tr>
      {{/categories}}
    </tbody>
  </table>
</div>
